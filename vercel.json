{
  "crons": [
    {
      "path": "/api/sync/players",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/sync/live-scores",
      "schedule": "*/15 11-19 * * *"
    }
  ],
  "functions": {
    "api/sync/players.js": {
      "maxDuration": 60
    },
    "api/sync/live-scores.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" }
      ]
    }
  ]
}
